{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": ["$eslint-stylish"],
			"label": "npm: lint",
			"detail": "eslint -c .eslintrc.js --ext .ts src/"
		}
	]
}
